<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="master_data-management.controller.MainView">
  
  <Table id="financingManagement" items="{/Financings}">
    <columns>
      <Column>
        <Text text="Name" />
      </Column>
      <Column>
        <Text text="Description" />
      </Column>
      <Column>
        <Text text="State" />
      </Column>
      <Column>
        <Text text="Edit" />
      </Column>
    </columns>
    <items>
      <ColumnListItem>
        <cells>
          <Text text="{Name}"/>
          <Text text="{Description}"/>
          <Switch state="{path: 'isEnabled', type: 'sap.ui.model.type.Boolean'}" />
          <Button text="Edit" icon="sap-icon://edit" press="onEditPress" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>

</mvc:View>
