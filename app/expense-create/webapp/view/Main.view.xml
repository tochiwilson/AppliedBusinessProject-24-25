<mvc:View controllerName="expensecreate.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
            <layout:Grid
                id="tileGrid"
                defaultSpan="L4 M6 S12"
                width="100%">
                <layout:content>
                    <GenericTile
                        id="createExpenseTile"
                        header="Create Expense"
                        subheader="Add a new expense record"
                        frameType="TwoByOne"
                        press=".onCreateExpensePress">
                        <TileContent id="createExpenseTileContent">
                            <NumericContent
                                id="createExpenseNumericContent"
                                icon="sap-icon://create-form" />
                        </TileContent>
                    </GenericTile>
                </layout:content>
            </layout:Grid>
        </content>
    </Page>
</mvc:View>
