<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="expensecreate.controller.CreateExpense">
    <Page id="createExpensePage" title="Create Expense">
        <content>
            <VBox id="vbox"> 
                <Label id="projectNameLabel" text="Project Name" required="true"/>
                <Input id="projectName" placeholder="Enter Project Name" required="true"/>
                
                <Label id="projectManagerLabel" text="Project Manager" required="true"/>
                <Input id="projectManager" placeholder="Enter Project Manager" required="true"/>
                
                <Label id="startDateLabel" text="Start Date" required="true"/>
                <DatePicker id="startDate" value="{path: '', formatter: '.formatDate'}"/>

                <Label id="categoryLabel" text="Category" required="true"/>
                <Select id="category">
                    <items>
                        <core:Item id="categoryItem" key="{categoryId}" text="{categoryName}"/>
                    </items>
                </Select>

                <Label id="financingTypeLabel" text="Financing Type" required="true"/>
                <Select id="financingType">
                    <items>
                        <core:Item id="financingItem" key="{financingId}" text="{financingName}"/>
                    </items>
                </Select>

                <Label id="durationMonthsLabel" text="Duration (Months)" required="true"/>
                <Input id="durationMonths" type="Number" placeholder="Enter duration in months" required="true"/>

                <Label id="greenEnergyOutputLabel" text="Green Energy Output (%)"/>
                <Input id="greenEnergyOutput" type="Number" placeholder="Enter green energy output"/>

                <Label id="co2CurrentLabel" text="Current CO2 Impact (kg/ton)"/>
                <Input id="co2Current" placeholder="Enter current CO2 impact"/>

                <Label id="co2PostCompletionLabel" text="Post-completion CO2 Impact (kg/ton)"/>
                <Input id="co2PostCompletion" placeholder="Enter post-completion CO2 impact"/>

                <Label id="waterUsageCurrentLabel" text="Current Water Usage (m3/tn)"/>
                <Input id="waterUsageCurrent" placeholder="Enter current water usage"/>

                <Label id="waterUsagePostCompletionLabel" text="Post-completion Water Usage (m3/tn)"/>
                <Input id="waterUsagePostCompletion" placeholder="Enter post-completion water usage"/>

                <Label id="greenPaybackLabel" text="Green Payback (Months)"/>
                <Input id="greenPayback" type="Number" placeholder="Enter green payback duration"/>

                <Label id="commentsLabel" text="Comments"/>
                <TextArea id="comments" placeholder="Enter comments (min 500 characters)" rows="5"/>

                <Button id="submitButton" text="Submit" press="onSubmit"/>
            </VBox>
        </content>
    </Page>
</mvc:View>
