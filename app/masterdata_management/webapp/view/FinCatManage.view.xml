<mvc:View controllerName="masterdatamanagement.controller.FinCatManage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <IconTabBar
		id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Financing Types" key="fin_type">
 <Table id="financingManagementtt" items="{/Financings}">
        <columns>
            <Column>
                <Text text="Name" />
            </Column>
            <Column>
                <Text text="Description" />
            </Column>
            <Column>
                <Text text="State" />
            </Column>
            <Column>
                <Text text="Edit" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{financingName}" />
                    <Text text="{financingDescription}" />
                    <Switch state="{path: 'isEnabled', type: 'sap.ui.model.type.Boolean'}" />
                    <Button text="Edit" icon="sap-icon://edit" press="onEditPress" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
				</IconTabFilter>
			<IconTabFilter text="CAR Category" key="car_cat">
				<Text text="Car categories" />
			</IconTabFilter>
		</items>
	</IconTabBar>
  	<Button
				id="FinanceTypeButton"
				text="Try me!"
				press=".onOpenDialog"
				class="sapUiSmallMarginEnd"
			/>
    </Page>
</mvc:View>
